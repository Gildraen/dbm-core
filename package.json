{
  "name": "@dbm/core",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/index.js"
    }
  },
  "type": "module",
  "bin": {
    "dbm-migrate": "lib/infrastructure/cli/migrate.js"
  },
  "scripts": {
    "compile": "yarn clean && yarn build",
    "clean": "rm -rf lib",
    "build": "tsc && tsc-alias",
    "dbm-migrate": "node lib/infrastructure/cli/migrate.js",
    "postinstall": "yarn build && chmod +x lib/infrastructure/cli/migrate.js",
    "zip": "rm -f discord-bot-core-export.zip && zip -r discord-bot-core-export.zip . -x \"node_modules/*\" \".git/*\" \"lib/*\" \"*.log\" \".env\" \".DS_Store\"",
    "test": "vitest run",
    "test:watch": "vitest --printConsoleTrace=true --silent=false --disable-console-intercept",
    "test:update": "vitest -u",
    "lint": "tsc --noEmit && eslint . --ext .ts,.js"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "ajv": "^8.17.1",
    "findup-sync": "^5.0.0",
    "prisma": "^6.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/findup-sync": "^4.0.5",
    "@types/node": "^22.13.10",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "@vitest/coverage-istanbul": "^3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.13",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.4"
  },
  "files": [
    "lib"
  ]
}
